<style>
    span {
        color: red;
        font-size: small;
    }
</style>

@model Wedding

<div class="row-col py-5">
    <h2>Plan Your Wedding</h2>
</div>
<div class="row-col">
    <form asp-action="AddNewWedding" asp-controller="Home" method="post">
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="WedderOne">Wedder One:</label>
            </div>
            <div class="col-6">
                <span asp-validation-for="WedderOne"></span>
                <input class="form-control" type="text" asp-for="WedderOne">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="WedderTwo">Wedder Two:</label>
            </div>
            <div class="col-6">
                <span asp-validation-for="WedderTwo"></span>
                <input class="form-control" type="text" asp-for="WedderTwo">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Date">Date:</label>
            </div>
            <div class="col-6">
                <span asp-validation-for="Date"></span>
                <input class="form-control" type="date" asp-for="Date">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Address"></label>
            </div>
            <div class="col-6">
                <span asp-validation-for="Address"></span>
                <input class="form-control" type="address" asp-for="Address">
            </div>
        </div>
        <div class="row-col py-5">
            <input type="submit" value="Create" class="btn btn-outline-info">
        </div>
    </form>
</div>